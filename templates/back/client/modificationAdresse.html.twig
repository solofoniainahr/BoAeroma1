{% block edit_order %}
    <div class="element-box">
        <div class="col-md-12">
            <h4>Modifier une adresse</h4>
            {% for message in app.flashes('successAdresse') %}
                <div class="alert alert-success">{{message}}</div>
            {% endfor %}
    
            
            {{ form_start(form) }}
            {{form_errors(form)}}
            
            {#<div class="row">
                <div class="form-group col-md-6">
                    {{ form_row(form.nom, {'label': 'Nom', 'attr':{'class': 'form-control'}}) }}
                </div>
    
               
            </div>#}
           
            <div class="row">
                <div class="form-group col-md-6">
                    {{ form_row(form.adresse, {'label': 'Adresse', 'attr':{'class': 'form-control'}}) }}
                </div>
                <div class="form-group col-md-6">
                    {{ form_row(form.codePostal, {'label': 'Code postal', 'attr':{'class': 'form-control'}}) }}
                </div>
            </div>
            
            <div class="row">
               
                <div class="form-group col-md-6">
                    {{ form_row(form.ville, {'label': 'Ville', 'attr':{'class': 'form-control'}}) }}
                </div>
            </div>
    
            <button class="btn btn-primary">{{ button_label|default('Confirmer') }}</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}