{% extends 'back/produit/index.html.twig' %}
{% block title %} Liste gamme client{% endblock %}
{% block produits %}
    {% for message in app.flashes('successGammeClient') %}
        <div style="background-color: #d4edda" class="alert alert-success" role="alert">
            {{ message }}
        </div>
    {% endfor %}
    <h6 class="element-header">Liste gamme client</h6>

    <div id="tablecontent" class="table-responsive">
        <div style="margin: auto; display: none" class="loader"></div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{message}}
            </div>
        {% endfor %}

        {% for message in app.flashes('successCatalogue') %}
            <div class="alert alert-success">
                {{message}}
            </div>
        {% endfor %}
        <a href="{{path('back_gamme_client_creation')}}" class="btn btn-sm btn-primary mb-3"><i class="os-icon os-icon-plus-circle"></i> Cr√©er un catalogue client</a>

        <a href="{{path('back_list_des_gammes_clients')}}" class="btn btn-sm btn-secondary mb-3">Liste des gammes clients</a>

        <a href="{{ path('back_rafraichir_gammes_clients') }}" style="display: none ;">rafraichir</a>
        <table class="table table-striped table-lightfont table-hover dataTable1">
            <thead>
                <tr>
                    <th>Client</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% if gammeListe %}
                    {% for gamme in gammeListe %}
                        {% set client = gamme.client %}
                        <tr>
                            <td width="50%">
                                <span class="badge badge-info">
    
                                    {% if client %}
                                    
                                        {% if client.raisonSocial %}
                                            
                                            {{ client.raisonSocial }}
        
                                        {% else %}
                                            
                                            {{client.fullName}}
        
                                        {% endif %}
    
                                    {% endif %}
    
                                </span>
                            </td>
                            <td width="50%">
                                
                                
                                <a href=" {{ path('back_liste_des_gamme_du_client', {id: client.id}) }} " class="btn btn-success" ><i class="os-icon os-icon-eye"></i> Voir les gammes</a>
                                
                               
                            </td>
                        </tr>
                    {% endfor %}
                {% endif %}
            </tbody>
        </table>
    </div>

{% endblock %}
                