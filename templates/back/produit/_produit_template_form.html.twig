{% block _etape2_produit_marqueBlanches_widget %}
    
    {{ form_widget(form) }}
    
{% endblock %}

{% block _petape2_produit_marqueBlanches_entry_label %}
    
    {{ form_label(form) }}
    
{% endblock %}

{% block form_errors %}
    
    {% for error in errors %}
        <div class="text-danger mb-2">
            <span class='badge badge-danger'>ERREUR </span> {{ error.message|raw }}
        </div>
    {% endfor %}

{% endblock %}

{% block _etape2_produit_marqueBlanches_entry_row %}

    <div id="block_{{id}}">

        <div class="border shadow px-3 pb-3 mb-3">
            <div class="row mt-3">
              
                <div class="col">
                    <a href="" data-action="delete" data-target="#block_{{id}}" class=" float-right btn btn-danger"><i class="os-icon os-icon-ui-15"></i></a>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    
                    {{ form_row(form.marque, {'label': 'Raison sociale', 'attr':{'class' : 'form-sm'}} ) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.nom, {'attr':{'class' : 'form-sm' }} ) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.reference, {'attr':{'class' : 'form-sm' }} ) }}
                </div>
            </div>
           
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.client, {'attr':{'class' : 'search' }} ) }}
                </div>
                <div class="col-md-6">
                    {#{dump( form.tarif.vars.errors )}#}
                    
                    {{ form_row(form.tarif, {'attr':{'class' : 'search' }} ) }}
                    {{ form_widget(form.position, {'attr':{'class' : 'd-none' }} ) }}

                </div>
            </div>

            {#<div class="col my-3 text-center">
                <h5>Position du produit dans le bon de pr√©paration</h5>
            </div>
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.gammeMarqueBlanche, {'attr':{'class' : 'form-sm search' }} ) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.position, {'label':'Position du produit', 'attr':{'class' : 'form-control form-sm', 'min' : '0', 'required': false }} ) }}
                </div>
            </div>#}
        </div>
    </div>

{% endblock %}


