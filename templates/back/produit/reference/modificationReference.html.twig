{% extends 'back/produit/arome/listeArome.html.twig' %}

{% block title %}Modifier la référence{% endblock %}

{% block produits %}
    <div class="row">
        <div class="col-lg-12">
            <div class="element-wrapper">
                <div class="element-box">
                    <h4 class="title">Modifier la référence</h4>
                    <div class="mt-4">
                        <div class="col-md-6"> 
                            {{ form_start(form) }}
                                {{form_errors(form)}}
                            
                                <div class="form-group">
                                    {{ form_row(form.nom, {'label': 'Nom', 'attr':{'class': 'form-control'}}) }}
                                </div>
                            
                                <button class="btn btn-{{ info|default('primary') }}">{{ button_label|default('Modifier') }}</button>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}