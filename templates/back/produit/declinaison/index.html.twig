{% extends 'back/produit/base/listeBase.html.twig' %}

{% block configuration %}
    {% for message in app.flashes('successContenant') %}
        <div style="background-color: #d4edda" class="alert alert-success" role="alert">
            {{ message }}
        </div>
    {% endfor %}
    <h6 class="element-header">Liste des pricinpes actifs</h6>

    <div id="tablecontent" class="table-responsive">
        <div style="margin: auto; display: none" class="loader"></div>

        {% for message in app.flashes('successAjoutDeclinaison') %}
            <div class="alert alert-success">
                {{message}}
            </div>
        {% endfor %}

        <a href="{{path('back_produit_ajout_declinaison')}}" class="btn btn-primary btn-sm mb-3"><i class="os-icon os-icon-plus-circle"></i> Créer un principe actif</a>
        
        <table class="table table-striped table-lightfont table-hover dataTable1">
            <thead>
                <tr>
                    <th> Principe actif </th>
                    <th> Déclinaison </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for decli in declinaisons %}
                    <tr>
                        <td>
                            {{decli.principeActif}}
                        </td>
                        <td>
                            Taux:
                            {% for dec in decli.declinaisons %}
                                 {{dec.declinaison}} 
                            {% endfor %}
                        </td>
                        <td>
                            <a href="{{path('back_produit_modification_declinaison', {id: decli.id})}}" class="btn btn-success btn-sm"> <i class="os-icon os-icon-edit"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        
    </div>

{% endblock %}
                