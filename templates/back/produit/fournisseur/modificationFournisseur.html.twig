{% extends 'back/produit/base/listeBase.html.twig' %}

{% block title %}Modification fournisseur{% endblock %}

{% block configuration %}
    <div class="row">
        <div class="col-lg-12">
            <div class="element-wrapper">
                <div class="element-box">
                    <h4 class="title">Modification fournisseur</h4>
                    <div class="mt-4">
                        <div class="col-md-12"> 
                            {{ form_start(form) }}
                                {{form_errors(form)}}
                            
                                <div class="row">
                                    <div class="form-group col-md-6">
                                        {{ form_row(form.nom, {'label': 'Nom', 'attr':{'class': 'form-control'}}) }}
                                    </div>
    
                                    <div class="form-group col-md-6">
                                        {{ form_row(form.Prenom, {'label': 'Prénom(s)', 'attr':{'class': 'form-control'}}) }}
                                    </div>
                                </div>
                               
                                <div class="row">
                                    <div class="form-group col-md-6">
                                        {{ form_row(form.email, {'label': 'Email', 'attr':{'class': 'form-control'}}) }}
                                    </div>

                                    <div class="form-group col-md-6">
                                        {{ form_row(form.siren, {'label': 'SIREN', 'attr':{'class': 'form-control'}}) }}
                                    </div>
    
                                </div>
                               
                                <div class="row">
                                    <div class="form-group col-md-4">
                                        {{ form_row(form.adresse, {'label': 'Adresse', 'attr':{'class': 'form-control'}}) }}
                                    </div>
    
                                    <div class="form-group col-md-4">
                                        {{ form_row(form.codePostal, {'label': 'Code postale', 'attr':{'class': 'form-control'}}) }}
                                    </div>
    
                                    <div class="form-group col-md-4">
                                        {{ form_row(form.ville, {'label': 'Ville', 'attr':{'class': 'form-control'}}) }}
                                    </div>
    
                                </div>
                            
                                <div class="form-group">
                                    {{ form_row(form.noTva, {'label': 'Numéro TVA intracommunautaire ', 'attr':{'class': 'form-control'}}) }}
                                </div>

                                <div class="text-center">
                                    <button class="btn btn-{{ info|default('primary') }}">{{ button_label|default('Enregistrer') }}</button>
                                </div>
                                
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}